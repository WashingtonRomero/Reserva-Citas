@page
@model BuscarMedicoModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Buscar Médico";
}

<div class="search-container">
    <h2>Buscar Médico</h2>
    <form method="get">
        <input type="text" name="searchTerm" placeholder="Ingrese el nombre o especialidad" value="@Model.SearchTerm" />
        <button type="submit">Buscar</button>
    </form>
    <div class="doctor-list">
        @foreach (var doctor in Model.Doctores)
        {
            <div class="doctor-card">
                <img src="@doctor.ImagenUrl" alt="Imagen de @doctor.Nombre" width="80" height="80" />
                <h3>@doctor.Nombre</h3>
                <p>@doctor.Especialidad</p>
                <a href="/DoctorDetails?id=@doctor.Id">Ver detalles</a>
            </div>
        }
    </div>
</div>

